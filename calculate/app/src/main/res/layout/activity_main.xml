<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    <EditText
        android:id="@+id/Edit1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="숫자1 입력" />

    <EditText
        android:id="@+id/Edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edit1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="숫자2 입력" />


    <Button
        android:id="@+id/BtnNum0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edit2"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/BtnNum1"
        android:text="0" />

    <Button
        android:id="@+id/BtnNum1"
        android:text="1"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/BtnNum2"
        android:layout_below="@id/Edit2"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/BtnNum2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edit2"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="2" />

    <Button
        android:id="@+id/BtnNum3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edit2"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/BtnNum2"
        android:text="3" />

    <Button
        android:id="@+id/BtnNum4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edit2"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/BtnNum3"
        android:text="4" />


    <Button
        android:id="@+id/BtnNum5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnNum2"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/BtnNum6"
        android:text="5" />

    <Button
        android:id="@+id/BtnNum6"
        android:text="6"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/BtnNum7"
        android:layout_below="@id/BtnNum2"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/BtnNum7"
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnNum2"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/BtnNum8"
        android:text="8"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/BtnNum7"
        android:layout_below="@id/BtnNum2"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/BtnNum9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnNum2"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/BtnNum8"
        android:text="9" />


    <Button
        android:id="@+id/BtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnNum7"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFDC3C"
        android:text="더하기" />

    <Button
        android:id="@+id/BtnSub"
        android:text="빼기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/BtnAdd"
        android:layout_below="@id/BtnNum7"
        android:textColor="#FFDC3C"
        android:layout_margin="4dp" />

    <Button
        android:id="@+id/BtnMul"
        android:text="곱하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/BtnSub"
        android:layout_below="@id/BtnNum7"
        android:textColor="#FFDC3C"
        android:layout_margin="4dp" />

    <Button
        android:id="@+id/BtnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnNum7"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/BtnMul"
        android:text="나누기"
        android:textColor="#FFDC3C" />


    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/BtnAdd"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="답 : "
        android:textSize="18dp" />


</RelativeLayout>